@model IEnumerable<ASP.NET_core_role_based_authentication_master.Models.Billing>

@{
    ViewData["Title"] = "Index";
}

<h2></h2>

<form asp-controller="Billing" asp-action="Index" method="get">
    <p>
        <b>Search by Provider Name:</b> <input type="text" name="SearchString">
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
</form>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>                                                                                                 
                    <!-- <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"> -->
                    @Html.DisplayNameFor(model => model.ClaimNumber)</a>
                </th>
                <th>                    
                    <!-- <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]"> -->
                        @Html.DisplayNameFor(model => model.ProviderName)</a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DOB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DOS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CPT1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CPT2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CPT3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CPT4)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ICD1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ICD2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ICD3)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() <= 0)
        {
            <tr> <td colspan = "11"> <h4>Provider records not found. Pls enter correct provider name in search.</h4> </td>  </tr> 
        }
        else
        {
            @foreach (var item in Model) {
            <tr>
                <td>
                    CRN-000-@Html.DisplayFor(modelItem => item.ClaimNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProviderName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPT1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPT2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPT3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPT4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ICD1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ICD2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ICD3)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClaimNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClaimNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClaimNumber">Delete</a>
            </td>
        </tr>
}
        }
    </tbody>
</table>
